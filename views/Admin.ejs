<!DOCTYPE html>
<html>
<head>
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <body>
    <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Clockin-Clockout App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Admin Access</h2></div>
    <br>
    <form action="/search" method="GET" class="text-center">
        <input type="text" name="search" class="form-control w-50 d-inline-block">
        <button type="submit" class="btn btn-primary">Search</button>
    <div class="text-center">
        <h3>Welcome, <%=timesheet.username %></h3>
        </div>
    <table class="table table-hover small text-center">
      <thead>
            <tr>
                <th width="100">Username</th>
                <th width="100">ClockIN</th>
                <th width="50">Break Start</th>
                <th width="50">Break End</th>
                <th width="50">ClockOut</th>
                <th width="50">Total Hour</th>
                <th width="50">Update</th>
                <th width="50">Delete</th
            </tr>
        </thead>
        <tbody>
            <% timesheet.forEach(timesheet => { %>
                <tr>
                    <td><%= timesheet.username %></td>
                    <td><%= timesheet.clockin %></td>
                    <td><%= timesheet.breakstart %></td>
                    <td><%= timesheet.breakend %></td>
                    <td><%= timesheet.clockout %></td>
                    <td><%= timesheet.totalhour %></td>
                    <td><a href="/update/<%= timesheet.id %>" class="btn btn-warning">Update</a></td>
                    <td><a href="/delete/<%= timesheet.id %>" class="btn btn-danger">Delete</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
        <a href="/logout" class="btn btn-secondary mt-3">Logout</a>
</body>