<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to our website</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Welcome back to work</a>
        </div>
    </nav>

    <div class="container mt-5">

        <% if (messages && messages.length > 0) { %>
            <div class="alert alert-success">
                <% messages.forEach(function(message) { %>
                    <p><%= message %></p>
                <% }); %>
            </div>
        <% } %>

        <% if (user) { %>
            <h3>Hello, <%= user.staff_name %></h3>
            <a href="/List" class="btn btn-primary mt-3">View staff List</a>
            <a href="/logout" class="btn btn-danger mt-3 ms-2">Logout</a>
        <% } else { %>
            <a href="/register" class="btn btn-primary mt-3">Register</a>
            <a href="/login" class="btn btn-success mt-3 ms-2">Login</a>
        <% } %>

    </div>
</body>
</html>

