<!DOCTYPE html>
<html>
<head>
    <title>List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      .navbar-custom {
        background-color: rgb(16, 239, 90);
      }
    </style>
</head>

<body>
    <body>
    <nav class="navbar navbar-expand-sm navbar-custom navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Clock In Clock Out</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>timesheet details</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead> 
          <tr>
            <th width="100">Staff image</th>
            <th width="100">Staff Name</th>
            <th width="100">Clock IN</th>
            <th width="50">Break Start</th>
            <th width="50">Break End</th>
            <th width="50">Clock OUT</th>
            <th width="50">DATE</th>
            <th width="50">Total Hour</th>
            <th width="50">Update</th>
            <th width="50">Add Work Info</th>
            </tr>
      </thead>
      <tbody>
        <% timesheet.forEach(timesheet => { %>
          <tr>
            <td>
              <% if (timesheet.staff_image) { %>
                <img src="/image/<%=timesheet.image%>" alt="Staff Image" class="img-fluid rounded-circle" style="width: 50px; height: 50px;">
              <% } else { %>
                 No image uploaded  
              <% } %>
            </td>
            <td><%= timesheet.staff_name %></td>
            <td><%= timesheet.clock_in %></td>
            <td><%= timesheet.break_start %></td>
            <td><%= timesheet.break_end %></td>
            <td><%= timesheet.clock_out %></td>
            <td><%= timesheet.date %></td>
            <td><%= timesheet.total_hour %></td>
            <td><a href="/update/<%= timesheet.staff_id %>" class="btn btn-warning">Update</a></td>
            <td><form action="/add/<%= timesheet.staff_id %>" method="POST"><button type="submit"
               class="btn btn-danger">Add Staff info</button></form></td>
          </tr>
        <% }) %>
        </tbody>
        </table>
        <div class="text-center">
            <a href="/List" class="btn btn-primary">Back</a>
                

        
</div>