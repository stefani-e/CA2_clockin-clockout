<!DOCTYPE html>
<html>

<head>
    <title>Add Clock Entry</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h1 class="mt-5">Add Clock In/Out Entry</h1>

        <% if (messages && messages.length> 0) { %>
            <div class="alert alert-danger">
                <% messages.forEach(function(message) { %>
                    <p>
                        <%= message %>
                    </p>
                    <% }); %>
            </div>
            <% } %>

                <form action="/add" method="POST" class="mt-4">
                    <div class="form-group">
                        <label for="staff_name">staff_name:</label>
                        <input type="text" id="staff_name" name="staff_name" class="form-control" required <% if (formData
                            && formData.staff_name) { %> value="<%= formData.staff_name %>" <% } else { %> value="" <% } %>>
                    </div>

                    <div class="form-group">
                        <label for="clock_in">Clock In:</label>
                        <input type="time" id="clock_in" name="clock_in" class="form-control" required <% if (formData &&
                            formData.clock_in) { %> value="<%= formData.clock_in %>" <% } else { %> value="" <% } %>>
                    </div>

                    <div class="form-group">
                        <label for="break_start">Break Start:</label>
                        <input type="time" id="break_start" name="break_start" class="form-control" required <% if
                            (formData && formData.break_start) { %> value="<%= formData.break_start %>" <% } else { %>
                                value="" <% } %>>
                    </div>

                    <div class="form-group">
                        <label for="break_end">Break End:</label>
                        <input type="time" id="break_end" name="break_end" class="form-control" required <% if (formData
                            && formData.break_end) { %> value="<%= formData.break_end %>" <% } else { %> value="" <% } %>>
                    </div>

                    <div class="form-group">
                        <label for="clock_out">Clock Out:</label>
                        <input type="time" id="clock_out" name="clock_out" class="form-control" required <% if (formData
                            && formData.clock_out) { %> value="<%= formData.clock_out %>" <% } else { %> value="" <% } %>>
                    </div>

                    <div class="form-group">
                        <label for="total_hour">Total Hour:</label>
                        <input type="number" step="0.01" id="total_hour" name="total_hour" class="form-control" required
                            <% if (formData && formData.total_hour) { %> value="<%= formData.total_hour %>" <% } else { %>
                                value="" <% } %>>
                    </div>

                    <div class="form-group">
                        <label for="date">Date:</label>
                        <input type="date" id="date" name="date" class="form-control" required <% if (formData &&
                            formData.date) { %> value="<%= formData.date %>" <% } else { %> value="" <% } %>>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit Entry</button>
                </form>
    </div>
</body>

</html>